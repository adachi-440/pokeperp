# 必須
RPC_URL=
PRIVATE_KEY=
ORACLE_ADDRESS=

# 任意（未指定なら on-chain を参照）
# SCALE=100
# HEARTBEAT_SEC=10

# 任意（送信周期。heartbeat より短く）
PUSH_INTERVAL_MS=3000

# 任意（価格取得用エンドポイント）
# レスポンスは { "price": <number> } を想定
PRICE_SOURCE_URL=https://example.com/price

# 開発・運用向けスイッチ
# 同一価格なら送信スキップ（オンチェーン/直近送信と比較）
SKIP_SAME_PRICE=true
# 送信せずログのみ
DRY_RUN=false
